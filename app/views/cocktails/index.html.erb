<div class="container">
  .
  <h1>List of the cocktails</h1>
  <ul>
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
          <div class="caption">
            <h3><%= cocktail.name%></h3>
            <div class = "links">
              <p class = "btn btn-primary" role="button"><%= link_to 'Show', cocktail_path(cocktail)%></p>
              <p class = "btn btn-primary" role="button"><%= link_to 'Edit', edit_cocktail_path(cocktail)%></p>
              <p class = "btn btn-primary" role="button"><%= link_to "Delete", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </ul>

  <%= link_to 'Add a cocktail', new_cocktail_path%></li>

</div>

